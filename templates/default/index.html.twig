{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            {% for specialist in specialists %}
                <div class="col-lg-3">
                    <div class="text-center card-box {% if specialist.online %}border-success{% endif %}">
                        <div class="member-card pt-2 pb-2">
                            <div class="thumb-lg member-thumb mx-auto">
                                <img src="{{ asset('build/avatar.png') }}" class="rounded-circle img-thumbnail" alt="profile-image">
                            </div>
                            <div class="mt-2">
                                <h4>{{ specialist.firstName }} {{ specialist.lastName }}</h4>
                                <span class="badge {% if specialist.online %}bg-success{% else %}bg-secondary{% endif %}">
                                    {{ specialist.online ? "ðŸŸ¢ En ligne" : "Hors ligne" }}
                                </span>
                            </div>
                            <div class="mt-2">
                                <a class="btn btn-primary" href="{{ path('specialist_detail', { id: specialist.id }) }}">Voir le profil</a>
                                <a class="btn btn-primary" href="#">Appeler</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

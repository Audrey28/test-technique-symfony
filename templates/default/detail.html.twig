{% extends 'base.html.twig' %}

{% block title %}Détail de {{ specialist.firstName }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-body text-center">
                <img src="{{ asset('build/avatar.png') }}" class="rounded-circle img-thumbnail" alt="profile-image">
                <h2 class="mt-3">{{ specialist.firstName }} {{ specialist.lastName }}</h2>
                <p><strong>Status :</strong> {{ specialist.online ? "En ligne" : "Hors ligne" }}</p>
                <p><strong>Email :</strong> {{ specialist.email }}</p>
                <p><strong>Téléphone :</strong> {{ specialist.mobile }}</p>
                <a class="btn btn-primary" href="{{ path('specialist_call', { id: specialist.id }) }}">Appeler</a>
                <a href="{{ path('app_homepage') }}" class="btn btn-secondary">Retour</a>
            </div>
        </div>
    </div>
{% endblock %}
